@model FribergCarRentals.ViewModel.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="margin-top: 10em; margin-bottom: 2em;">
    <div class="d-flex justify-content-center align-items-center">
        <div class="login-box">
            <h2 class="text-center mb-4">Sign in:</h2>
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken() <!-- Anti forgery token -->
                <!-- Validation Summary -->
                <div class="text-danger">
                    @Html.ValidationSummary(false, "")
                </div>

                <!-- Email input -->
                <div class="form-outline mb-3">
                    <input asp-for="Email" type="email" id="formEmailInput" class="form-control" />
                    <label class="form-label" for="formEmailInput">Email address</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-3">
                    <input asp-for="Password" type="password" id="formPasswordInput" class="form-control" />
                    <label class="form-label" for="formPasswordInput">Password</label>
                </div>

                <!-- Remember me & Forgot password -->
                <div class="row mb-3">
                    <div class="col d-flex align-items-center justify-content-center">
                        <div class="form-check form-check-inline">
                            <input asp-for="RememberMe" type="checkbox" id="rememberMeCheck" />
                            <label class="form-check-label" for="rememberMeCheck">Remember me</label>
                        </div>
                    </div>
                    <div class="col d-flex align-items-center justify-content-center">
                        <a href="#!">Forgot password?</a>
                    </div>
                </div>

                <!-- Submit button -->
                <div class="d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-primary btn-block mb-3">Sign in</button>
                </div>

                <!-- Register link -->
                <div class="text-center">
                    <p>Not a member? <a asp-action="Register">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

