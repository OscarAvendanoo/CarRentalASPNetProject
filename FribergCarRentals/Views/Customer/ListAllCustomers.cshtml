@model IEnumerable<Customer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    ViewData["Title"] = "Manage customers";
}

<!-- Listar alla customers som ett table-->

<table class="table mt-5">
    <thead>
        <tr>
            <th>
                Customer Id:
            </th>
            <th>
                First Name:
            </th>
            <th>
                Last Name:
            </th>
            <th>
                Email:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <!-- Crud knappar för admin-->
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn-primary btn me-2">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn-danger btn me-2">Delete</a> 
                    <a asp-controller="Booking" asp-action="ListUserBookings" asp-route-id="@item.CustomerId" class="btn-secondary btn me-2">Manage bookings</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Create knapp-->
<p>
    <a asp-action="Create" class="btn-primary btn mt-03">Create new customer</a>
</p>
