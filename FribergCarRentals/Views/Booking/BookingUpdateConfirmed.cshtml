@model Booking
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<h1 class="text-center fs-1">The booking was successfully updated.</h1>

<div class="container my-4">
    <!-- Card för car details -->
    <div class="card">
        <div class="card-header">
            <h4 class="fs-3">Customer details:</h4>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <!-- customer details vänstersida-->
                <div class="col-md-5">
                    <dl class="row mt-4">
                        <dt class="col-sm-4 fs-5 fw-bold">Customer ID:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(model => model.CustomerId)</dd>
                        <dt class="col-sm-4 fs-5 fw-bold">CarId:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(Model => Model.CarId)</dd>
                        <dt class="col-sm-4 fs-5 fw-bold">Car brand:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(model => model.Car.Brand)</dd>
                        <dt class="col-sm-4 fs-5 fw-bold">Model:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(model => model.Car.Model)</dd>
                        <dt class="col-sm-4 fs-5 fw-bold">Modelyear:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(model => model.Car.ModelYear)</dd>
                        <dt class="col-sm-4 fs-5 fw-bold">Start date:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(model => model.StartDate)</dd>
                        <dt class="col-sm-4 fs-5 fw-bold">End date:</dt>
                        <dd class="col-sm-8 fs-4">@Html.DisplayFor(model => model.EndDate)</dd>
                    </dl>
                </div>
                <!-- Bild högersida -->
                <div class="col-md-5">
                    <img src="@Model.Car.carImages[0]"
                         alt="Booking Image"
                         class="img-fluid w-80 float-end" />
                </div>
            </div>
        </div>
    </div>
</div>



<div class="mt-4 d-flex justify-content-center gap-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Go to Home</a>
    <a asp-controller="Customer" asp-action="ListAllCustomers" class="btn btn-secondary btn-lg">View customers</a>
</div>

