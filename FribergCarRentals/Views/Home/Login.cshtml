@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="margin-top: 10em; margin-bottom: 2em;">
    <h2>Sign in:</h2>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="login-box">
        <!-- Ensure this div exists -->
        <form>
            @Html.AntiForgeryToken()

            <div class="form-outline mb-4">
                <input type="email" id="formEmailInput" class="form-control" />
                <label class="form-label" for="formEmailInput">Email address</label>
            </div>

            <div class="form-outline mb-4">
                <input type="password" id="formPasswordInput" class="form-control" />
                <label class="form-label" for="formPasswordInput">Password</label>
            </div>

            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMeCheck" checked />
                        <label class="form-check-label" for="rememberMeCheck"> Remember me </label>
                    </div>
                </div>
                <div class="col text-end">
                    <a href="#!">Forgot password?</a>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
            </div>

            <div class="text-center mt-3">
                <p>Not a member? <a href="#!">Register</a></p>
            </div>
        </form>
    </div>
</div>
<div class="login-box" style="height: 500px; width: 500px;"></div>


