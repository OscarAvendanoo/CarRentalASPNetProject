<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FribergCarRentals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FribergCarRentals.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <a class="navbar-brand" href="#">
                    <img src="~/images/companyLogo.png" class="navbarLogo" width="50" height="50" alt="">
                </a>
                <a class="navbar-brand CompanyName ms-5" asp-area="" asp-controller="Home" asp-action="Index">Friberg car rentals</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="ListAllCars">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- navigationslänkar för inloggade användare-->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- navigationslänkar för Admin-->
                            if (User.IsInRole("Admin"))
                            {
                            
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="ListAllCustomers">Manage Users</a>
                                </li>
                              
                              @*   <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ListAllAdmins">Manage Admins</a>
                                </li> *@
                            }
                            else
                            {
                               
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="ListUserBookings">My Bookings</a>
                                </li>
                            }

                            <!-- Logga ut länk -->
                            <div class="ms-auto d-flex">
                             <li class ="nav-item " style="display: flex; justify-content: center; align-items: center; width: 7em; border-radius: 1rem;">
                                 <a class="nav-link text-white bg-primary text-center" style="border-radius: 0.5rem; width: 100%; padding: 0.5em 1em;" asp-area="" asp-controller="Home" asp-action="Logout">Log out</a>
                            </li>
                            </div>
                        }
                        else
                        {
                        <!-- navigationslänkar för ej inloggade användare-->
                         <div class="ms-auto d-flex">
                            <li class="nav-item me-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item " style="display: flex; justify-content: center; align-items: center; width: 5em; border-radius: 1rem;">
                                <a class="nav-link text-white bg-success text-center" style="border-radius: 0.5rem; width: 100%; padding: 0.5em 1em;" asp-area="" asp-controller="Customer" asp-action="Login">Log in</a>
                            </li>
                        </div>
                        }
                    </ul>
                </div>
                
            </div>
        </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FribergCarRentals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
