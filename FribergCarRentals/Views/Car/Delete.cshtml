@{
}


<h1 class="text-center fs-1">Are you sure you want to delete this car from the database?</h1>

<div class="container my-4">
    <!-- Card för car details -->
    <div class="card">
        <div class="card-header">
            <h4 class="fs-3">Car details:</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 fs-5 fw-bold">
                            Car ID
                        </dt>
                        <dd class="col-sm-8 fs-4">
                            @Html.DisplayFor(model => model.CarId)
                        </dd>
                        <dt class="col-sm-4 fs-5 fw-bold">
                            Brand:
                        </dt>
                        <dd class="col-sm-8 fs-4">
                            @Html.DisplayFor(Model => Model.Brand)
                        </dd>
                        <dt class="col-sm-4 fs-5 fw-bold">
                            Model:
                        </dt>
                        <dd class="col-sm-8 fs-4">
                            @Html.DisplayFor(model => model.ModelYear)
                        </dd>
                        <dt class="col-sm-4 fs-5 fw-bold">
                            Price per day:
                        </dt>
                        <dd class="col-sm-8 fs-4">
                            $@Html.DisplayFor(model => model.PricePerDay)
                        </dd>
                    </dl>
                </div>
                <!-- bild högersida -->
                <div class="col-md-6">
                    <img src="@Model.carImages[0]" alt="Booking Image" class="img-fluid w-100" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex" style="margin-left: 20px;">
    <form asp-action="DeleteFromDatabase" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="CarId" value="@Model.CarId" />
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
    </form>
    <a asp-controller = "Booking" asp-action="ListAllCars" class="btn btn-secondary btn-lg ms-3">Go Back</a>
</div>

